<header class="bg-white shadow">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900">
            Create New Post
        </h1>
    </div>
</header>
<main>
    <!-- Modal section -->
    <div
    id="my-modal"
	class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white hidden "
>
	<div class="mt-3 text-center">
		<div
			class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-blue-100"
		>
			<svg
				class="h-6 w-6 text-green-600"
				fill="none"
				stroke="black"
				viewBox="0 0 24 24"
				xmlns="http://www.w3.org/2000/svg"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M5 13l4 4L19 7"
				></path>
			</svg>
		</div>
		<h3 class="text-lg leading-6 font-medium text-gray-900">Successful!</h3>
		<div class="mt-2 px-7 py-3">
			<p class="text-sm text-gray-500">
                Your post has been submitted successfully!
			</p>
		</div>
		<div class="items-center px-4 py-3">
			<button
				id="ok-btn"
				class="px-4 py-2 bg-green-500 text-white 
                text-base font-medium rounded-md w-full 
                shadow-sm hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300">Ok</button>
            </div>
            
        </div>
    </div>
</div>
    <!-- end modal -->

    <div class=" max-w-7xl mx-auto py-6 sm:px-6 lg:px-8 mb-20">
        <!-- Replace with your content -->
        <div class="flex flex-col px-4 py-6 sm:px-0">
            <input type="text" id="post_title" name="create-post" placeholder="Post Title" class="w-full md:w-1/2 mb-5 mt-5 w-1/2 bg-gray-100 bg-opacity-50 rounded border border-gray-300 
             focus:border-indigo-500 focus:bg-transparent focus:ring-2 focus:ring-indigo-200 text-base 
             outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            <div class="py-1 px-3 border-4 border-dashed border-gray-200 rounded-lg h-96">
                <label class="text-gray-600">Post Content</label>
                <textarea id="post_content" name="post_content" class="
                    mt-4
                    w-full
                    h-80
                    px-4
                    py-4
                    border-2 border-gray-300
                    rounded-sm
                    outline-none
                    focus:border-blue-400
                  " placeholder="Enter text of your post"></textarea>
                </label>
            </div>

        </div>
        <button id="post_button"
            class="w-60 ml-2 text-white bg-blue-400 border-0 py-2 px-8 focus:outline-none hover:bg-blue-600 rounded text-lg">Submit
            Post</button>
    </div>
    <!-- /End replace -->
    </div>
</main>
</div>
<script src='js/newPost.js'></script>
<script src='js/session.js'></script>