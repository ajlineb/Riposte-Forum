<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      href='https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css'
      rel='stylesheet'
    />
    <link rel='stylesheet' href='css/style.css' />
    <title>Riposte</title>
  </head>

  <body>
    <header class='bg-gray-800 text-white body-font'>
      <div
        class='container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center'
      >
        <a
          href='/all-posts'
          class='flex title-font font-medium items-center text-white mb-4 md:mb-0'
        >
          <img
            src='/images/riposte-logo2 (1).jpg'
            class='w-16 h-16 text-white p-2 bg-blue-900 rounded-full'
            viewBox='0 0 24 24'
          />
          <span class='ml-3 text-4xl'>Riposte
          </span>
        </a>
        <nav
          class='md:ml-auto flex flex-wrap items-center text-base justify-center'
        >
          <a
            href='/all-posts'
            class='px-3 py-2 mr-5 rounded hover:text-gray-900 hover:bg-indigo-400'
          >Home</a>
          <a
            href='#choice-container'
            class='px-3 py-2 mr-5 rounded hover:text-gray-900 hover:bg-indigo-400'
          >About us</a>
          <a
            href='#how-to'
            class='px-3 py-2 mr-5 rounded hover:text-gray-900 hover:bg-indigo-400'
          >Help</a>
          {{#if loggedIn}}
            <a
              id='logout'
              class='px-3 py-2 mr-5 rounded hover:text-gray-900 hover:bg-indigo-400'
            >Logout</a>
          {{/if}}
          <p
            id='user-id'
            class='px-3 py-2 mr-5 rounded hover:text-gray-900 hover:bg-indigo-400'
          >User not logged in</p>
        </nav>
      </div>

    </header>
    {{{body}}}

    <footer class='bg-gray-800 text-white body-font'>
      <div class='container mx-auto flex flex-wrap p-5 flex-col items-center'>
        <a
          class='flex title-font font-medium items-center text-white mb-4 md:mb-0'
        >
          <img
            src='/images/riposte-logo2 (1).jpg'
            class='w-13 h-16 text-white p-2 bg-blue-900 rounded-full'
            viewBox='0 0 24 24'
          />
        </a>
      </div>
    </footer>

    {{#if loggedIn}}
      <script src='js/logout.js'></script>
      <script src='js/session.js'></script>
    {{/if}}
  </body>
</html>