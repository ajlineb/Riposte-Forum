<div>
  <div class='container px-5 py-24 mx-auto flex flex-wrap items-center'>
    <!--Card 1-->
    <div class='w-full'></div>
    <div
      class='border border-gray-400 lg:border-gray-400 bg-white rounded p-4 flex flex-col justify-between leading-normal'
    >
      <div class='mb-8' id='post-username'>
        <p class='text-sm text-gray-600 flex items-center'>
          {{post.user.username}}
        </p>
        <div
          class='text-gray-900 font-bold text-xl mb-2'
          id='post-title'
        >{{post.forum_name}}</div>
        <p
          class='text-gray-700 text-base'
          id='post-content'
        >{{post.forum_text}}</p>
      </div>
      <div class='flex'>
        <div class='text-sm inline'>
          <span class='text-gray-600'>{{post.forum_time_stamp}}</span>
          <a
            href='#'
            class='font-medium text-blue-900 hover:text-indigo-500 com-Btn'
          >
            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-5 w-5'
              viewBox='0 0 20 20'
              fill='currentColor'
            >
              <path
                fill-rule='evenodd'
                d='M18 13V5a2 2 0 00-2-2H4a2 2 0 00-2 2v8a2 2 0 002 2h3l3 3 3-3h3a2 2 0 002-2zM5 7a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1zm1 3a1 1 0 100 2h3a1 1 0 100-2H6z'
                clip-rule='evenodd'
              ></path>
            </svg>Comment
          </a>
          <a
            href='#'
            class='font-medium text-blue-900 hover:text-indigo-500 like-Btn'
            style='display: visible;'
          ><svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-6 w-6'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5'
              ></path>
            </svg>Like
            {{like_count}}</a>
          <a
            href='#'
            class='font-medium text-blue-900 hover:text-indigo-500 liked-Btn'
            style='display: none;'
          ><svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-5 w-5'
              viewBox='0 0 20 20'
              fill='currentColor'
            >
              <path
                d='M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z'
              ></path>
            </svg>Liked
            {{like_count}}</a>
          <a
            href='#'
            class='font-medium text-blue-900 hover:text-indigo-500 dislike-Btn'
            style='display: visible;'
          ><svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-6 w-6'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M10 14H5.236a2 2 0 01-1.789-2.894l3.5-7A2 2 0 018.736 3h4.018a2 2 0 01.485.06l3.76.94m-7 10v5a2 2 0 002 2h.096c.5 0 .905-.405.905-.904 0-.715.211-1.413.608-2.008L17 13V4m-7 10h2m5-10h2a2 2 0 012 2v6a2 2 0 01-2 2h-2.5'
              ></path>
            </svg>Dislike
            {{dislike_count}}</a>
          <a
            href='#'
            class='font-medium text-blue-900 hover:text-indigo-500 disliked-Btn'
            style='display: none;'
          ><svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-5 w-5'
              viewBox='0 0 20 20'
              fill='currentColor'
            >
              <path
                d='M18 9.5a1.5 1.5 0 11-3 0v-6a1.5 1.5 0 013 0v6zM14 9.667v-5.43a2 2 0 00-1.105-1.79l-.05-.025A4 4 0 0011.055 2H5.64a2 2 0 00-1.962 1.608l-1.2 6A2 2 0 004.44 12H8v4a2 2 0 002 2 1 1 0 001-1v-.667a4 4 0 01.8-2.4l1.4-1.866a4 4 0 00.8-2.4z'
              ></path>
            </svg>Disliked
            {{dislike_count}}</a>
        </div>
      </div>
    </div>
    <input
      type='text'
      class='focus:ring-indigo-500 focus:border-indigo-500 block h-10 min-w-max pl-7 pr-12 sm:text-sm border-gray-300 rounded-md'
      placeholder='Write a comment...'
      id='comment-field'
      style='display: none;'
    />
    <button
      type='submit'
      class='group relative w-300 flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-900 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 post-com'
      style='display: none;'
    >
      <span class='absolute left-0 inset-y-0 flex items-center pl-3'>
        <path
          fill-rule='evenodd'
          d='M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z'
          clip-rule='evenodd'
        ></path>
      </span>
      Submit
    </button>
  </div>
</div>

{{#each comments as |comment|}}
{{> comments-block}}
{{/each}}
<script src='/js/comment.js'></script>